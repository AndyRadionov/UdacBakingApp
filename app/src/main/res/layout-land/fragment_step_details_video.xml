<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    tools:context="io.github.andyradionov.udacitybakingapp.DetailsActivity"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent" />


        <TextView
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="0dp"
            app:layout_constraintTop_toBottomOf="@+id/player_view"
            android:id="@+id/tv_recipe_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginLeft="64dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_recipe_instructions"
            android:layout_gravity="left"
            android:text="Previous step"
            android:id="@+id/btn_prev_step"
            android:layout_width="160dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginRight="64dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_recipe_instructions"

            android:layout_gravity="right"
            android:text="Next Step"
            android:id="@+id/btn_next_step"
            android:layout_width="160dp"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>

