<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.andyradionov.udacitybakingapp.PlayerActivity">

    <com.google.android.exoplayer2.ui.SimpleExoPlayerView
        android:id="@+id/player_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guide_horizontal"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guide_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toBottomOf="@+id/guide_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/btn_prev_step"
        android:id="@+id/tv_recipe_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <Button
            android:layout_marginLeft="64dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="left"
            android:text="Previous step"
            android:id="@+id/btn_prev_step"
            android:layout_width="160dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginRight="64dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="right"
            android:text="Next Step"
            android:id="@+id/btn_next_step"
            android:layout_width="160dp"
            android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
